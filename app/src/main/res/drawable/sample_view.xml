<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer blue shape -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="15dp"/>
            <solid android:color="#051631" /> <!-- Change this to your desired outer blue color -->
        </shape>
    </item>
    <!-- Inner blue shape (boundary) -->
    <item
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <corners android:radius="15dp"/>
            <stroke
                android:width="2dp"
            android:color="#2B2B2B" /> <!-- Change this to your desired boundary color -->
             <!-- Make the inner shape transparent so that only the stroke is visible -->
        </shape>
    </item>
</layer-list>
